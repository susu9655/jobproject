	<insert id="insertUserAccount" parameterType="user">
	 	insert into user_account (username, hp, password, email, role, provider, provider_id, create_date)
	 	values (#{username},#{hp},#{password},#{email}, #{role}, #{provider}, #{providerId}, now())
	</insert>
	
	<select id="findByUsername" parameterType="user" resultType="user">
		SELECT * FROM user_account WHERE username = #{username}
	</select>
	
	<delete id="deleteUserAccount" parameterType="String">
		delete  from user_account where id = #{id}
	</delete>
	
