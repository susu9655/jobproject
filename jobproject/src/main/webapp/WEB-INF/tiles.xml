<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="layout" template="/WEB-INF/layout/layout.jsp">
		<put-attribute name="nav" value="/WEB-INF/layout/nav.jsp"/>
		<put-attribute name="body" value="/WEB-INF/layout/body.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/layout/footer.jsp"/>	
	</definition>
	
	<!-- wild card macro -->
	 <definition name="/*/*" extends="layout">
		<put-attribute name="body" value="/WEB-INF/{1}/{2}.jsp"/>
	</definition> 
	
	
	<!-- 관리자페이지 tiles 제외하기 -->
	<definition name="/admin2/*" extends="empty">
          <put-attribute name="empty" value="/WEB-INF/admin2/*.jsp" />
    </definition>
	
	
</tiles-definitions>